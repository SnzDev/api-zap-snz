generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Message {
  id            String   @id @default(uuid())
  line          Line     @relation(fields: [acess_key], references: [id])
  acess_key     String
  file_url      String?
  ack           Int
  message_id    String
  message_body  String
  sender        String
  destiny       String
  is_survey     Boolean?
  first_option  String?
  first_answer  String?
  second_option String?
  second_answer String?
  response      String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("message")
}

model Line {
  id           String    @id @default(uuid())
  phone_number String
  port         Int
  name         String
  observation  String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  webhook_url  String?
  Message      Message[]

  @@map("line")
}
